#include <stdio.h>
#include <stdlib.h>
#include <assert.h>



#define MAX_CHAR (1<<20)

int strlen (char *s)
{
	int len = 0;

	while (*s != 0) {
		s++;
		len++;
	}
	return len;
}

/* convertir una cadena de caràcters a minuscules */
void lowercase (char *s)
{
	int i;

	for (i = 0; i < strlen(s); i++) {
		if (s[i] >= 'A' && s[i] <= 'Z') {
			s[i] -= ('A' - 'a'); //Aquí hi ha una resta
		}
	}
}

void generateSentence(char *s, int n_car)
{
   int i;
   for (i=0; i<n_car; i++)
   {
      s[i]='\0'+(rand()&127)+1; //Aquí hi ha 2 sumes
   }
   s[i]='\0';
}



 
int main(int argc, char *argv[])
{
    int n_car=MAX_CHAR;
    char SENTENCE[MAX_CHAR+1];

    if (argc > 1) {
	n_car = atoi(argv[1]); 
    }

    generateSentence(SENTENCE, n_car);

    lowercase(SENTENCE);

    //write(0,SENTENCE,MAX_CHAR+1);
    return 0;
}
